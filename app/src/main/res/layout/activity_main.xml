<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="30sp">

    <Button
        android:id="@+id/setPositionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set position"
        android:layout_marginBottom="30sp" />

    <TextView
        android:id="@+id/coordinates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"></TextView>

    <TextView
        android:id="@+id/coordinatesXValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"></TextView>

    <TextView
        android:id="@+id/velocityXValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"></TextView>

    <TextView
        android:id="@+id/coordinatesYValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"></TextView>

    <TextView
        android:id="@+id/velocityYValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"></TextView>

    <TextView
        android:id="@+id/coordinatesZValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"></TextView>

    <TextView
        android:id="@+id/velocitysZValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"></TextView>

    <TextView
        android:id="@+id/accelerometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:textSize="24sp"></TextView>

    <TextView
        android:id="@+id/accelerometerXValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"></TextView>

    <TextView
        android:id="@+id/accelerometerYValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"></TextView>

    <TextView
        android:id="@+id/accelerometerZValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"></TextView>

    <TextView
        android:id="@+id/gyroscope"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:textSize="24sp"></TextView>

    <TextView
        android:id="@+id/gyroscopeXValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"></TextView>

    <TextView
        android:id="@+id/gyroscopeYValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"></TextView>

    <TextView
        android:id="@+id/gyroscopeZValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"></TextView>

</LinearLayout>

</ScrollView>